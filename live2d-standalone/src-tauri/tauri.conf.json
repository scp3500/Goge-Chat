{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "Goge Live2D",
    "version": "0.0.1",
    "identifier": "com.goge.live2d",
    "build": {
        "beforeDevCommand": "npm run dev",
        "devUrl": "http://localhost:1430",
        "beforeBuildCommand": "npm run build",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "label": "main",
                "title": "Goge Live2D",
                "width": 300,
                "height": 600,
                "resizable": true,
                "decorations": false,
                "transparent": true,
                "alwaysOnTop": true,
                "shadow": false,
                "visible": true,
                "dragDropEnabled": false
            }
        ],
        "security": {
            "csp": null,
            "assetProtocol": {
                "enable": true,
                "scope": [
                    "**"
                ]
            }
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    }
}