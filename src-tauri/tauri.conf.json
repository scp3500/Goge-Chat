{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "Goge Chat",
    "version": "0.0.1",
    "identifier": "com.goge.chat",
    "build": {
        "beforeDevCommand": "npm run dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "npm run build",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "title": "Goge Chat",
                "width": 1000,
                "height": 700,
                "resizable": true,
                "decorations": false,
                "transparent": true,
                "shadow": false,
                "dragDropEnabled": false
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": [
            "nsis"
        ],
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    }
}